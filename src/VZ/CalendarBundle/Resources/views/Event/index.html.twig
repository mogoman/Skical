{% extends "VZCalendarBundle::layout.html.twig" %}

{% block content %}

{% if events|length > 0 %}
<h1>{{ 'up_and_coming_events' | trans() }}</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>{{ "event_summary" | trans() }}</th>
            <th>{{ "event_start" | trans() }}</th>
            <th>{{ "event_actions" | trans() }}</th>
        </tr>
    </thead>
    <tbody>
    {% for event in events %}
        <tr>
            <td>{{ event.summary }}</td>
            <td>{{ event.startDate|date('d.m.Y') }} {{ event.startTime|date('H:i') }}</td>
            <td>
                <a class="btn btn-success" href="{{ path("vz_calendar_event_view", { 'id': event.id }) }}">
                    {{ "event_view" | trans() }}
                </a>
                <a class="btn btn-primary" href="{{ path("vz_calendar_event_edit", { 'id': event.id }) }}">
                    {{ "event_edit" | trans() }}
                </a>
                <a class="btn" href="{{ path("vz_calendar_event_addattendee", { 'id': event.id }) }}">
                    {{ "event_adduser" | trans() }}
                </a>
                <a class="btn btn-danger" href="{{ path("vz_calendar_event_delete", { 'id': event.id }) }}">
                    {{ "event_delete" | trans() }}
                </a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<h1>{{ "no_events_found" | trans() }}</h1>
{% endif %}

<a class="btn" href="{{ path("vz_calendar_event_create") }}">{{ "event_create_new" | trans() }}</a>

{% endblock %} 





